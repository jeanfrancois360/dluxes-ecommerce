// Payment Transactions for comprehensive tracking
model PaymentTransaction {
  id                String          @id @default(cuid())
  orderId           String
  userId            String

  // Stripe Information
  stripePaymentIntentId String?    @unique
  stripeChargeId        String?
  stripeCustomerId      String?

